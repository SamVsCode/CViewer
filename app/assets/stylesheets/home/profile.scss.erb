.profile-image{
    width: 100%;
    height: auto;
    padding: 10px;
    position: relative;

    img{
        max-width: 100%;
        height: auto;
        border-radius: 100%;
    }
    button{
        margin-top: 20px;
    }
}
.skills-list{
    border: 1px solid #e3e3e3;
    box-shadow: 1px 1px 1px #eee, -1px -1px 1px #eee;
    padding: 10px;
    ul{
        margin: 0;
        padding: 0;
        list-style: none outside none;
        li{
            position: relative;
            width: auto;
            height: auto;
            border: 1px solid #000;
            padding: 5px 35px 5px 5px;
            background-color: #273555;
            color: #fff;
            margin-bottom: 5px;
            display: inline-block;
            
            &:last-child{
                background: none;
                padding: 0;
                border: none;
                color: #000;
            }
            input{
                width: 100px;
                height: auto;
            }
        }
    }
    .badge{
        border-radius: 100%;
        position: absolute;
        right: 0px;
        top: 6px;
        background-color: #254559;
        cursor: pointer;
    }
}
.skill-save-button{
    width: 100%;
    margin-top: 10px;
    text-align: center;
}
.page .row{
    margin: 0!important;
}
.save-the-form{
    margin-top: 20px;
}
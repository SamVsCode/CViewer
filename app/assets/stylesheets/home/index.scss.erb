.page{
	margin: 50px 0;
	padding: 0px 20px;
}
.site-footer{
	width: 100%;
	height: auto;
	background-color: #e3e3e3;
	padding: 10px;
	p{
		text-align: center;
	}
}
.profile-avatar{
	padding: 40px;
	div{
		width: 100%;
		height: 100%;
		border: 2px solid #ccc;
		padding: 3px;
		border-radius: 100%;
		background-color: #e6e6e6;
		img{
			max-width: 100%;
			height: auto;
			border-radius: 100%;
		}
	}
}